{
  "name": "@busyachat/desktop",
  "description": "BusyaChat desktop app",
  "author": "BusyaChat",
  "private": true,
  "version": "0.1.0",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -n VITE,ELECTRON -c auto \"vite\" \"wait-on http://localhost:5173 && electron electron/main.cjs\"",
    "build": "vite build",
    "dist": "pnpm --dir ../../backend build && vite build && electron-builder"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io-client": "^4.7.5",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "electron": "^31.6.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.busya.chat",
    "productName": "BusyaChat",
    "executableName": "BusyaChat",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**"
    ],
    "extraResources": [
      {
        "from": "../../backend/dist",
        "to": "backend/dist"
      },
      {
        "from": "../../backend/node_modules",
        "to": "backend/node_modules"
      },
      {
        "from": "../../backend/prisma",
        "to": "backend/prisma"
      },
      {
        "from": "../../backend/.env",
        "to": "backend/.env"
      }
    ],
    "asarUnpack": [
      "**/backend/node_modules/**",
      "**/backend/prisma/**"
    ],
    "asar": true,
    "win": {
      "signAndEditExecutable": false,
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
